<div style="padding-left:3vh; padding-right:3vh">
  <h2>Comments</h2>
  <% @article.comments.each do |comment| %>
    <p>
      <strong><%= comment.user.username %></strong> says:</p>
    </p>

    <p>
      <i> <%= comment.body %></i>
    </p>

      <% if current_user && current_user.respond_to?(:admin?) && (comment.user == current_user || current_user.admin?) %>

         <%= link_to "Delete Comment", article_comment_path(@article, comment),  data: {
          turbo_method: :delete,
          confirm: "Are you sure you want to delete this comment?"
          } %>


      <% end %>


x
  <% end %>
</div>

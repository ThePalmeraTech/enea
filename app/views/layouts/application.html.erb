  </head>

  <body>
    <%= render 'shared/nav' %>

      <section>

          <div class="showroom">

            <div class="art-menu">
                <h1><a href="/">Enea Lebrun</a></h1>
                <div class='nav animated bounceInDown'>
                  <ul>
  <li>
    <%= link_to 'Biografia', '#biografia', class: ('bold' if request.fullpath.include?('#biografia')) %>
  </li>
  <% if @articles.present? && @articles.any? %>
    <% @articles.reverse_each do |article| %>
      <li>
        <%= link_to article.title, article_path(article), class: ('bold' if current_page?(article_path(article))) %>
      </li>
    <% end %>
  <% else %>
    <li>No hay proyectos listados</li>
  <% end %>
  <li>
    <%= link_to 'Contacto', '#contacto', class: ('bold' if request.fullpath.include?('#contacto')) %>
  </li>
</ul>

                </div>

            </div>

            <div class="header">
          <div class="d-flex">
            <button id="menu-button">â˜°</button>
            <h2 class="mt-4"> Enea Lebrun</h2>
          </div>
          <nav id="mobile-menu" class="hidden">
            <ul>
              <li><a href="#biografia">Biografia</a></li>
            </ul>
          </nav>
        </div>


            <div class="art-content">
              <%= yield %>  <!-- this is where the content of the view will be rendered -->
            </div>

          </div>


      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

      </section>




  </body>

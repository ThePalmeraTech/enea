<section id="article">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="mb-5 article-title">
                    <%= @article.title %>
                </h1>
            </div>
            <div class="col-lg-12">
                <div class="slider-container">
                    <div class="slider">
                        <!-- Sign in area - Slide 1 start-->
                        <div class="slide" style="background-image: url('<%= cl_image_path @article.photo.key %>'); width:100%; height:100%;background-size:cover; background-repeat:no-repeat">
                        </div>
                        <!-- Sign in area end-->

                        <!-- Videobox and Retailers area - Slide 2 start-->
                        <div class="slide">
                            <div class="trix-content">
                                <%= @article.body %>
                            </div>
                        </div>

                         <% if @article.vimeo_link.present? %>
                            <div class="slide">
                              <div class="view" id="view3">
                                 <!-- Responsive iframe container -->
                                  <div style="padding:56.25% 0 0 0;position:relative;">
                                      <% vimeo_id = @article.vimeo_link.split('/').last %>
                                      <iframe src="https://player.vimeo.com/video/<%= vimeo_id %>" style="position:absolute;top:0;left:0;width:100%;height:100%;" frameborder="0" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen></iframe>
                                  </div>
                                  <script src="https://player.vimeo.com/api/player.js"></script>
                              </div>
                            </div>
                          <% end %>
                    </div>

                    <div class="slider-dots">
                        <span class="dot active"></span>
                        <span class="dot"></span>
                        <% if @article.vimeo_link.present? %>
                         <span class="dot"></span>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
        <hr>
    </div>
</section>

 <div class="container-fluid">

    <div class="row">

        <% @articles.reverse.each do |article| %>

        <div class="col-lg-12 p-3">
          <%= link_to article do %>
            <div class="horizontal-card mb-2">
            <div class="row">
                <% if article.photo.present? %>
                  <div class="col-lg-12">
                    <div class="image" style="background-image: url('<%= cl_image_path(article.photo.key) %>'); max-height:100vh; min-height:88vh;background-size:cover; background-repeat:no-repeat"></div>
                  </div>
                <% else %>
                <div class="col-lg-12">
                  <div class="image" style="background-image: url('https://imagenes.laestrella.com.pa/files/content_image/uploads/2020/08/12/5f3476619cee1.jpeg');    height: 80vh;">
                  </div>
                  </div>
                <% end %>

              </div>
            </div>
          <% end %>
           </div>
        <% end %>







    </div>

  </div>

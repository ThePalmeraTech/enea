<h1>New Article</h1>
 <%= simple_form_for(@article) do |f| %>
  <!-- [...] -->
   <%= f.text_field :title %>
  </div>
  <div>
  <%= f.file_field :photo, as: :file %>
  </div>
  <div>
    <%= f.label :category_id %>

<div class="container">
  <h1>New Article</h1>
  <%= simple_form_for(@article) do |f| %>
    <!-- [...] -->
    <div>
    <%= f.text_field :title %>
    </div>
    <div>
    <%= f.file_field :photo, as: :file %>
    </div>
    <div>
      <%= f.label :category_id %>
      <%= f.select :category_id, options_for_select(Category.all.map { |category| [category.name, category.id] }) %>
    </div>
    <div>
      <%= form.label :content %>
      <%= form.rich_text_area :content %>
    </div>
    <div>
      <%= f.submit %>
    </div>
    <!-- [...] -->
  <% end %>

</div>

<header style="box-shadow: 0px 11px 7px #9393931f;;">
        <div class="container-fluid">
          <nav id="navigation">

              <div class="row">


                  <div class="col-lg-1 mt-4">
                    <%= link_to "Home", root_path %>
                  </div>

                  <div class="col-lg-1 mt-4">
                    <%= link_to "Sign Up", new_user_registration_path %>
                  </div>

                  <div class="col-lg-1 mt-4">
                    <%= link_to "Sign In", new_user_session_path %>
                  </div>
                  <% if user_signed_in? %>
                    <div class="col-lg-1 mt-4"><%= link_to 'Sign out  ', destroy_user_session_path, data: { turbo_method: :delete } %></div>
                  <% end %>

                  <% if user_signed_in? %>
                    <div class="col-lg-4 mt-4 text-end"><h6>Hola <b><%= current_user.username %></b>, has iniciado sesion como <b><%= current_user.role %></b> en Enea Lebrun</h6></div>
                  <% end %>

                  <% if current_user.role == "admin" || current_user.role == "publisher" %>
                    <div class="col-lg-4">
                      <%= link_to "Agregar publicacion", new_article_path, class:'btn btn-primary btn-sm' %>
                    </div>
                  <% end %>
              </div>


          </nav>
        </div>
      </header>
